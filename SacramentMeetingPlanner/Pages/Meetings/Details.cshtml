@page
@model SacramentMeetingPlanner.Pages.Meetings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.MeetingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meeting.MeetingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.Conducting)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meeting.Conducting)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.NumSpeakers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meeting.NumSpeakers)
            @*<a asp-page="../Speakers/Create">add</a>*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.Assignments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Speaker</th>
                    <th>Topic</th>
                </tr>
                @foreach (var item in Model.Meeting.Assignments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Speaker.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Speaker.Topic)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Meeting?.MeetingID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
