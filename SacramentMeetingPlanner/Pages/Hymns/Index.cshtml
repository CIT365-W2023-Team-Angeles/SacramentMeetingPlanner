@page
@model SacramentMeetingPlanner.Pages.Hymns.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Hymns</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.Hymn[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hymn[0].Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Hymn) {
        <tr class="table-light">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.HymnID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.HymnID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.HymnID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
